s = float(input("Введите начальное расстояние: "))
x = float(input("Введите скорость Джерри: "))
y = float(input("Введите скорость Тома: "))

if y <= x:
    print("Том не сможет поймать Джерри.")
else:
    time = s / (y - x)
    if time > 0:
        print(f"Том поймает Джерри через {time:.2f} секунд.")
    else:
        print("Том не сможет поймать Джерри.")
